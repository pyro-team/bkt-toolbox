                <Label.ToolTip>
                    <Image Source="{Binding iconsearch_group_url}" />
                </Label.ToolTip>
            </Label>
            <RadioButton Grid.Row="30" Grid.Column="1" GroupName="iconsearch_group" IsChecked="{Binding iconsearch_group[0], Mode=TwoWay}" Content="{Binding iconsearch_group_header[0]}" />
            <RadioButton Grid.Row="30" Grid.Column="2" GroupName="iconsearch_group" IsChecked="{Binding iconsearch_group[1], Mode=TwoWay}" Content="{Binding iconsearch_group_header[1]}" />
